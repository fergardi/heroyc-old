include mixins
doctype
html(lang='en')
  head
    title API
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Baking Bootstrap Snippets with Jade')
    +bootswatch('paper')
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', rel='stylesheet')
    link(href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/css/bootstrap-select.min.css', rel='stylesheet')
    link(href='//cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css', rel='stylesheet')
    link(href='//api.mapbox.com/mapbox-gl-js/v0.26.0/mapbox-gl.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    .container
      include navbar
    .container.fixed
      .row
        .col-md-offset-6.col-md-6.col-xs-12.alerts
    .container
      block content
    script(src='/javascripts/constants.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='//api.mapbox.com/mapbox-gl-js/v0.26.0/mapbox-gl.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-notify/0.2.0/js/bootstrap-notify.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/js/bootstrap-select.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/vue/2.0.3/vue.js')
    script(src='/javascripts/ajax.js')
    script(src='/javascripts/notifications.js')
    block javascripts
    script.
      setTimeout(function() {
        $('[data-toggle="tooltip"]').tooltip();
        $('[data-toggle="popover"]').popover();
      },100);