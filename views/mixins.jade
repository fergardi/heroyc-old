mixin nav(name, id, icon, style)
  - var style = (typeof style === 'undefined') ? "default" : style
  nav(role="navigation", class=["navbar", "navbar-" + style])
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        +fa("bars")
      a.navbar-brand(href="#")
        +fa(icon)
        = name
    .collapse.navbar-collapse(id=id)
      ul.nav.navbar-nav
        block

mixin nav_item(href, icon, active)
  li(class=active): a(href=href)
    +fa(icon)
    block

mixin nav_item_dropdown(href, active)
  li(class=["dropdown", active])
    a.dropdown-toggle(href=href, data-toggle="dropdown", role="button", aria-expanded="false")= attributes.label
      +fa("caret-down")
    ul.dropdown-menu(role="menu")
      block

mixin nav_divider
  li.divider

mixin nav_header
  li.dropdown-header
    block

mixin panel(heading, style, icon)
  - var style = (typeof style === 'undefined') ? "default" : style
  div(class=["panel", "panel-" + style])
    .panel-heading
      .panel-title
        +fa(icon)
        = heading
    .panel-body
      block

mixin button(style, href, icon)
  - var style = (typeof style === 'undefined') ? "default" : style
  - var href = (typeof href === 'undefined') ? "#" : href
  a(class=["btn", "btn-" + style, "bgn-lg"], href=href)
    +fa(icon)
    block

mixin fa(icon)
  if (typeof icon !== 'undefined' && icon !== '') 
    i(class=["fa", "fa-fw", "fa-" + icon])

mixin alert(style, icon)
  div(class=["alert", "alert-dismissable", "alert-" + style])
    button.close( type="button", data-dismiss="alert" )
      +fa("times-circle")
    +fa(icon)
    block

mixin pageader(title, subtitle)
  .page-header
    h1= title + ' '
      small= subtitle

mixin bootswatch(theme)
  link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/" + theme + "/bootstrap.min.css", rel="stylesheet")
