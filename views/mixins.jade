mixin nav(title, icon, style)
  - var id = "menu"
  - var style = (typeof style === 'undefined') ? "default" : style
  nav(role="navigation", class=["navbar", "navbar-" + style])
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        +fa("bars")
      a.navbar-brand(href="/")
        +fa(icon)
        = title
    .collapse.navbar-collapse(id=id)
      ul.nav.navbar-nav.navbar-right
        block

mixin nav_item(href, icon)
  li: a(href=href)
    +fa(icon)
    block

mixin nav_dropdown(title, icon)
  li.dropdown
    a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false")
      +fa(icon)
      = title
      +fa("caret-down")
    ul.dropdown-menu(role="menu")
      block

mixin nav_divider
  li.divider

mixin nav_header
  li.dropdown-header
    block

mixin panel(heading, style, icon)
  - var style = (typeof style === 'undefined') ? "default" : style
  div(class=["panel", "panel-" + style])
    .panel-heading
      .panel-title
        +fa(icon)
        = heading
    .panel-body
      block

mixin button(style, href, icon, full)
  - var style = (typeof style === 'undefined') ? "default" : style
  - var href = (typeof href === 'undefined') ? "#" : href
  - var full = (typeof full === 'undefined') ? "" : "btn-block"
  a(class=["btn", "btn-" + style, "bgn-lg", full], href=href)
    +fa(icon)
    block

mixin fa(icon)
  if (typeof icon !== 'undefined' && icon !== '') 
    i(class=["fa", "fa-fw", "fa-" + icon])

mixin code(title)
  pre
    b= title
    block

mixin alert(style, icon)
  div(class=["alert", "alert-dismissable", "alert-" + style])
    button.close( type="button", data-dismiss="alert" )
      +fa("times-circle")
    +fa(icon)
    block

mixin pageader(title, subtitle)
  .page-header
    h1= title + ' '
      small= subtitle

mixin bootswatch(theme)
  link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/" + theme + "/bootstrap.min.css", rel="stylesheet")
