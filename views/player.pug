extends layout

block content
  div#player
    .row
      .col-xs-12
        .page-header
          h1 Player 
            small Yourself
      .col-md-8.col-md-offset-2.col-xs-12
        .col-md-4.col-xs-12(v-for='item in items')
          include item
        
block javascripts
  script.
    var player = new Vue({
      el: '#player',
      data: {
        items: []
      },
      mounted: function() {
        self = this;
        self.get();
      },
      methods: {
        get: function() {
          $.get('/api/player/1', function(results) {
            self.items = results.data.Items;
            notification.info('Player loaded from database!')
          });
        }
      }
    });